<?xml version='1.0' encoding='utf-8'?>
<widget id="counter.free.simple" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Simple Counter</name>
    <description>
		OpenSource counter. Intuitive, simple and easy to use.
		https://github.com/tanrax/simple-counter
    </description>
	<author email="andros@fenollosa.work" href="https://github.com/tanrax/simple-counter">
		Andros Fenollosa
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
	<icon src="icon.png" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
